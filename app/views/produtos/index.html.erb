<div class="hidden-xs">
<table class="table table-condensed table-hover">
  <div class="btn-group btn-group-justified">
    <%= link_to 'Promoções', produtos_path(department_id: Department.find_by(name: 'Promoções')), class: 'btn btn-primary', style: 'color: white' %>
    <%= link_to 'Salgados', produtos_path(department_id: Department.find_by(name: 'Salgados')), class: 'btn btn-primary', style: 'color: white' %>
    <%= link_to 'Lanches', produtos_path(department_id: Department.find_by(name: 'Lanches')), class: 'btn btn-primary', style: 'color: white' %>
    <%= link_to 'Refeições', produtos_path(department_id: Department.find_by(name: 'Refeições')), class: 'btn btn-primary', style: 'color: white' %>
    <%= link_to 'Bebidas', produtos_path(department_id: Department.find_by(name: 'Bebidas')), class: 'btn btn-primary', style: 'color: white' %>
    <%= link_to 'Doces', produtos_path(department_id: Department.find_by(name: 'Doces')), class: 'btn btn-primary', style: 'color: white' %>
    <a href="produtos#index" class="btn btn-primary", style="color: white">Todos os produtos</a>
  </div>

  <p id="notice"><%= notice %></p>

  <% if alert %>
    <div class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
  <% end %>

  <span style= "text-align: center"><h2>Todos os produtos</h2></span><br><br>
  <thead>
    <tr>
      <th>Imagem</th>
      <th>Nome</th>
      <th>Preço</th>
      <th>Estoque</th>
      <th>Opção</th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= image_tag(produto.image, size: '100x100', class:"img-rounded") %></td>
        <td><%= produto.nome %></td>
        <td>R<%= number_to_currency(produto.valor, unit: "$ ")%></td>
        <td><%= produto.quantidade %></td>
        <td><%= link_to 'Ver mais', produto %></td>
        <td><%= render "produto_row", produto: produto, shopping_cart_item: @shopping_cart_item %><td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div class="hidden-lg">
  <p id="notice"><%= notice %></p>

  <% if alert %>
    <div class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
  <% end %>

  <% @produtos.each do |produto| %>
    <div class="row">
      <div class="col-xs-6"><%= image_tag(produto.image, size: '100x100', class:"img-rounded") %></div><br><br>
      <div class="col-xs-4"><span style="color: green">R<%= number_to_currency(produto.valor, unit: "$ ")%></span></div>
      <div class="col-xs-2"><u><%= link_to 'Ver mais', produto %></u></div>
    </div>
    <div class="row">
      <br><div class="col-xs-6"><span style="font-weight: bold"><%= produto.nome %></span></div>
      <div class="text-right">Estoque: <span style="color: red"><%= produto.quantidade %></span></div>
      <%= render "produto_row", produto: produto, shopping_cart_item: @shopping_cart_item %>
      <br>
    </div>
  <% end %>
</div>
