<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table class="product-list">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th>Quantidade</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.valor %></td>
        <td><%= produto.quantidade %></td>
        <td><%= link_to 'Mostrar', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_produto_path %>
