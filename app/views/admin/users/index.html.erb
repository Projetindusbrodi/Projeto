<p id="notice"><%= notice %></p>

<h1>Alunos</h1>

<table class="students-list">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>

      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.name %></td>
        <td><%= aluno.email %></td>

        <td><%= link_to 'Mostrar', admin_user_path(aluno) %></td>
        <td><%= link_to 'Editar', edit_admin_user_path(aluno) %></td>
        <td><%= link_to 'Excluir', admin_user_path(aluno), method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Aluno', new_admin_user_path %>
